{
    "version": "5.2.0",
    "license": "BSD",
    "homepage": "https://www.anaconda.com/",
    "checkver": {
        "url": "https://repo.continuum.io/archive",
        "re": "Anaconda2-([\\d.]+)-Windows"
    },
    "bin": [
        [
            "python.exe",
            "python"
        ]
    ],
    "pre_install": "
        Write-Host 'Installing Anaconda 2. This can take up to 30 minutes on an HDD.' -ForegroundColor Magenta
    ",
    "installer": {
        "file": "anaconda2-installer.exe",
        "args": [
            "/S",
            "/InstallationType=JustMe",
            "/RegisterPython=1",
            "/AddToPath=0",
            "/D=$dir"
        ]
    },
    "uninstaller": {
        "file": "Uninstall-Anaconda2.exe",
        "args": [
            "/S"
        ]
    },
    "env_add_path": "Scripts",
    "architecture": {
        "64bit": {
            "url": "http://repo.continuum.io/archive/Anaconda2-5.2.0-Windows-x86_64.exe#/anaconda2-installer.exe",
            "hash": "md5:595e427e4b625b6eab92623a28dc4e21"
        },
        "32bit": {
            "url": "http://repo.continuum.io/archive/Anaconda2-5.2.0-Windows-x86.exe#/anaconda2-installer.exe",
            "hash": "md5:4a3729b14c2d3fccd3a050821679c702"
        }
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "http://repo.continuum.io/archive/Anaconda2-$version-Windows-x86_64.exe#/anaconda2-installer.exe"
            },
            "32bit": {
                "url": "http://repo.continuum.io/archive/Anaconda2-$version-Windows-x86.exe#/anaconda2-installer.exe"
            }
        },
        "hash": {
            "url": "$baseurl",
            "find": "$basename<.*\\s+<.*\\s+<.*\\s+<td>([a-fA-F0-9]{32})</td>"
        }
    }
}
